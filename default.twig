{% extends "layout.twig" %}
{% block content %}


<div class="bk-row  row  row__nav-01">
    <div class="bk-row__container  row__container">

        <div class="row__column  row__column--one-quarter  align--middle-left">
            {{widget('socialicons', 'socialnetworks', {
                'facebook': 'https://www.facebook.com/mycompanyname',
                'twitter': 'https://twitter.com/mycompanyname',
                'instagram': 'https://www.instagram.com/mycompanyname'
            })|raw}}
        </div>

        <div class="row__column  row__column--half  align--middle-center">
            {{widget('extendednavigation', 'navigation', {})|raw}}
        </div>

        <div class="row__column  row__column--one-quarter  align--middle-right">
            {{widget('clicktocall', 'clicktocall', {
                'phoneText': '01234 123456',
                 'fontSize': 16,
                'align': 'widget-align-right'
            })|raw}}
        </div>

    </div>
</div>


<div class="bk-row  row  row__hero-01  row__overlay  bg--cover"  style="background-image: url('http://rhysjp.co.uk/dex/barber.jpg');>
    <div class="bk-row__container  row__container">

        <div class="row__column  row__column--full align--middle-center">
            {{widget('logo', 'sitelogo', {
                'defaultlogo': asset("templates/barber-logo.png")
            })|raw}}
        </div>

    </div>
</div>


<div class="bk-row  row  row__content-01">
    <div class="bk-row__container  row__container">

        <div class="row__column  row__column--half  align--middle-left">
            {{widget('content', 'sidebarcontent', {
                content: '<p>Lorem ipsum dolor sit amet...</p>'
            })|raw}}
        </div>


        <div class="row__column  row__column--half  align--middle-left">
            {{widget('image', 'footerimage', {
                'src': asset("templates/barber.jpg")
            })|raw}}
        </div>

    </div>
</div>


{% endblock %}
